<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <absa.cgs.com.utils.fonts.CustomTextView
        android:id="@+id/customRadioGroupTileHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:text="@string/billing_time"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"></absa.cgs.com.utils.fonts.CustomTextView>

    <RadioGroup
        android:id="@+id/customRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customRadioGroupTileHint"
        app:layout_constraintVertical_bias="0.03">

        <absa.cgs.com.utils.fonts.CustomRadioButton
            android:id="@+id/customRadioButtonOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Male"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_13sdp"></absa.cgs.com.utils.fonts.CustomRadioButton>


        <absa.cgs.com.utils.fonts.CustomRadioButton
            android:id="@+id/customRadioButtonTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Female"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_13sdp"></absa.cgs.com.utils.fonts.CustomRadioButton>


    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>